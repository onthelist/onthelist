server {
  listen *:80;
  server_name  <%= node[:hostname] %>;
  access_log  <%= node[:nginx][:log_dir] %>/localhost.access.log;

  root /home/www-server/onthelist/site/public;
  index index.html;

  server_name localhost;
  
  location = / {
    proxy_pass http://cf.speedyseat.us/<%=`git rev-parse HEAD`%>.html;

    proxy_cache index;
    proxy_cache_key "$request_uri";
    
    proxy_cache_valid 200 302 301 1h;
    proxy_cache_valid any 5s;
  
    allow all;
  }

  location / {
    allow all;
  }

  location /extern/ {
    alias /home/www-server/onthelist/site/extern/;
  }

  location /init/ {
    alias /home/www-server/init/;
  }

  location /messaging/ {
    proxy_pass http://localhost:5857/;
  }
  
  location /device/ {
    proxy_pass http://localhost:4313/;
  }

  location /log/ {
    proxy_pass http://localhost:40404/;
  }
}


