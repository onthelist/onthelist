  header(data-role="header")
    h1 View Party
    a(href="#modify-party", data-role="button", data-transition="none") Edit
      
  div.content(data-role="content")
    .pill
      .major.upper.ui-bar-e(data-key="name") John Smith 
      .major.lower.ui-bar-d(data-key="status")
        | Waiting 23 minutes
        img.icon(src="images/icons/78-stopwatch.png")
      .minor.ui-bar-b
        span(data-key="size") 5
        .subtext Party Of
      span.clear
    div.center-wrapper
      h3 Created at 5:30 PM
    hr
    div.center-wrapper
      h4 First Available Seat
    
    h3 Created at 5:30 PM
    div.ui-grid-a  
      div.ui-block-a
        h4 Seating Preference
      div.ui-block-b
        h4#party-seating-preference-details First Available
        
      div.ui-block-a
        h4 Notes
      div.ui-block-b
        h4#party-notes-details Prefers a window seat
        
      div.ui-block-a
        h4 Stated Wait Time
      div.ui-block-b
        h4#party-stated-wait-time-details 15 Minutes
    hr
    div.center-wrapper
      h3#party-time-remaining-details 5 Minutes 
          span Remaining
      


    a(href="#alert-party",data-role="button", data-theme="b") Send Text Message Alert
    
