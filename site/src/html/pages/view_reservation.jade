#view-reservation(data-role="dialog")
  header(data-role="header", data-position="fixed")
    h1 The Steakhouse
    a(href="#modify-party", data-role="button", data-transition="none") Edit
      
  div.content(data-role="content")
    .pill
      .major.ui-bar-e John Smith
      .minor.ui-bar-b 5
      span.clear
    fieldset.ui-grid-a
      div.ui-block-a
        h4 Phone
      div.ui-block-b
        h4#reservation-phone-details 586-212-4392
          
      div.ui-block-a
        h4 Party Size
      div.ui-block-b 
        h4#reservation-size-details 5
        
      div.ui-block-a
        h4 Called Ahead
      div.ui-block-b
        h4#reservation-called-ahead-details No

      div.ui-block-a
        h4 Seating Preference
      div.ui-block-b
        h4#reservation-seating-preference-details First Available
       
      div.ui-block-a
        h4 Alert Method
      div.ui-block-b
        h4#reservation-alert-method-details Text
        
      div.ui-block-a
        h4 Notes
      div.ui-block-b
        h4#reservation-notes-details Prefers a window seat
        
      div.ui-block-a
        h4 Date
      div.ui-block-b
        h4#reservation-date-details 7/16/2011
        
      div.ui-block-a
        h4 Time
      div.ui-block-b
        h4#reservation-time-details 5:10 PM

      div.ui-block-a
        h4 reservationStatus
      div.ui-block-b
        h4 Waiting | Seated at table # | No show

    a(href="#alert-party",data-role="button", data-theme="b") Alert
    
    a(href="#check-in-party",data-role="button", data-theme="b") Check-In

    a(href="#delete-party",data-role="button", data-theme="f") Delete 
